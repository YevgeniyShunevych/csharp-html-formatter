<Window x:Class="CSharpHtmlFormatter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSharpHtmlFormatter"
        mc:Ignorable="d"
        Title="C# HTML Formatter" Height="400" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Button Content="Process Clipboard" Click="OnButtonClick"/>
        <TextBox Name="ResultTextBox" IsReadOnly="True" Grid.Row="1" AcceptsReturn="True" TextWrapping="Wrap"/>
    </Grid>
</Window>
